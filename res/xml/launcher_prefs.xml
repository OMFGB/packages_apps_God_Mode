<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
    	android:key="@+id/launcher_settings" 
        android:dialogTitle="dialogtitle"
        android:title="@string/use_settings_title" 
    >
		<CheckBoxPreference
 	        	android:key="screen_changer" 
        	        android:title="@string/screen_changer_title" 
        		android:summary="@string/screen_changer_title_summary"
        		android:enabled="true"
        		
		/>
    </PreferenceCategory> 

    <PreferenceCategory
    	android:key="@+id/number_screens" 	
    	android:title="@string/number_screens_title"
    	android:enabled="true"
    	android:disableDependentsState="true">
		<ListPreference
   			android:key="num_screens"	
  			android:dependency="screen_changer"					
 			android:title="@string/homescreen_elements"
 			android:summary="@string/homescreen_elements_about"		 	  		
                	android:entries="@array/number_of_screens"
		        android:entryValues="@array/number_of_screens_value"
		/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/category_other_launcher_settings">
	<CheckBoxPreference
		android:key="launcher_endless_loop"
		android:title="@string/title_launcher_endless_loop"
		android:summaryOn="@string/summary_on_launcher_endless_loop"
		android:summaryOff="@string/summary_off_launcher_endless_loop"
	/>
    </PreferenceCategory>
</PreferenceScreen>

