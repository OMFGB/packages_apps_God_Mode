		android:key="clock_options_pref">
		<intent
			android:action="android.intent.action.MAIN"
			android:targetPackage="com.t3hh4xx0r"
			android:targetClass="com.t3hh4xx0r.god_mode.statusbar.ClockActivity" />
	</Preference>

	<Preference
		android:title="Battery options"
		android:key="battery_options_pref">
		<intent
