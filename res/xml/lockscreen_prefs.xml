<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<EditTextPreference
		android:key="carrier_caption"
		android:title="Lockscreen Carrier Caption"
		android:summary="Change the lockscreen carrier caption."
		android:dialogTitle="Enter lockscreen caption."
		android:defaultValue="OMFG...B" 
	/>

	<CheckBoxPreference
		android:key="use_rotary_lockscreen"
		android:title="@string/title_general_use_rotary_lockscreen"
		android:summaryOn="@string/summary_on_general_use_rotary_lockscreen"
		android:summaryOff="@string/summary_off_general_use_rotary_lockscreen" 
	/>
	<CheckBoxPreference
		android:key="use_stock_lockscreen_layout"
		android:title="@string/title_use_stock_lockscreen_layout"
		android:summaryOn="@string/summary_on_use_stock_lockscreen_layout"
		android:summaryOff="@string/summary_off_use_stock_lockscreen_layout" />      

</PreferenceScreen>
